<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdlBtnVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.44" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40sp"
        android:layout_marginTop="35sp"
        android:text="Tips Calculando Gorjetas"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/txtWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preencha os campos para o cÃ¡lculo da gorjeta"
        app:layout_constraintStart_toStartOf="@+id/txtTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/edtValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="34sp"
        android:maxLength="6"
        android:inputType="numberDecimal"
        android:layout_marginEnd="100sp"
        android:hint="o valor total da conta..."
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/edtPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="100sp"
        android:inputType="number"
        android:maxLength="3"
        android:hint="quantidade de pessoas..."
        app:layout_constraintTop_toBottomOf="@+id/edtValor"
        tools:ignore="Autofill,HardcodedText" />

    <RadioGroup
        android:id="@+id/rgPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="81sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPeople">

        <RadioButton
            android:id="@+id/rbDen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%"
            tools:ignore="HardcodedText" />
        <RadioButton
            android:id="@+id/rbTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15%"
            tools:ignore="HardcodedText" />
        <RadioButton
            android:id="@+id/rdThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            tools:ignore="HardcodedText" />
    </RadioGroup>

    <Button
        android:id="@+id/btnClean"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="limpar"
        app:layout_constraintEnd_toStartOf="@+id/gdlBtnVertical"
        app:layout_constraintStart_toStartOf="@+id/edtPeople"
        app:layout_constraintTop_toBottomOf="@+id/rgPercent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="calcular"
        app:layout_constraintEnd_toEndOf="@+id/edtPeople"
        app:layout_constraintStart_toStartOf="@+id/gdlBtnVertical"
        app:layout_constraintTop_toBottomOf="@+id/rgPercent"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>